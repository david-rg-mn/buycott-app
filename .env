# Backend database
BUYCOTT_DATABASE_URL=postgresql+psycopg://buycott:buycott@localhost:5432/buycott
BUYCOTT_POSTGRES_PORT=5432
BUYCOTT_API_PORT=8000

# Embedding model runtime
BUYCOTT_EMBEDDING_MODEL=BAAI/bge-small-en-v1.5
BUYCOTT_EMBEDDING_DEVICE=cuda
BUYCOTT_EMBEDDING_BATCH_SIZE=64
BUYCOTT_EMBEDDING_NORMALIZE=true
BUYCOTT_EMBEDDING_DIMENSION=384

# Ontology expansion depth governance
BUYCOTT_ONTOLOGY_MIN_DEPTH=3
BUYCOTT_ONTOLOGY_MAX_DEPTH=5

# Routing defaults
BUYCOTT_WALKING_THRESHOLD_MINUTES_DEFAULT=15
BUYCOTT_DRIVING_KMH_DEFAULT=30
BUYCOTT_WALKING_KMH_DEFAULT=5

# OpenClaw extraction / GPU orchestration
OPENCLAW_GPU_ENABLED=true
OPENCLAW_NVIDIA_SPARK_CLUSTER=dgx-spark

# Frontend API endpoint
BUYCOTT_API_URL=http://localhost:8000

# Observability / logging levels (DEBUG, INFO, PERF)
BUYCOTT_LOG_LEVEL=INFO
BUYCOTT_PERF_LOG_LEVEL=PERF
BUYCOTT_TELEMETRY_ENABLED=true
